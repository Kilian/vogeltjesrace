---
import { SITE } from "../config";
---

<header>
  <div>
    <a href="/">Vogeltjesrace 2023</a>
    <p>
      <b>Zaterdag 30 september, 14:00 &ndash; 18:00</b>
      Buurtvaart naast het CKC in Zoetermeer
    </p>
  </div>
</header>

<style>
  header {
    position: relative;
    background: #2d4475;
    text-align: left;
    padding: 2rem;
  }

  div {
    max-width: 65rem;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  header > div > a {
    color: white;
    font-size: 2rem;
    font-weight: bold;
    text-decoration: none;
    font-family: Boogaloo;
    color: #fb9695;
    line-height: 1;
  }

  header p {
    text-align: right;
    color: #a6b22a;
    line-height: 1.2;
  }
  header p b {
    display: block;
    color: #f08535;
  }
</style>
